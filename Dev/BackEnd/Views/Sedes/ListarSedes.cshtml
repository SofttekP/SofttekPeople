@model IEnumerable<WellnessPeople.Models.Sede>

@{
    ViewData["Title"] = "Administración de Sedes";
    Layout = "~/Views/Shared/_Layout_Backend.cshtml";
}

<br />
<h2>Administración de Sedes</h2>
<hr />

<p class="float-right">
    <img src="~/images/iconoatras_Pink.png" onclick="javascript:location.href='PanelAdmin/Index'" style="cursor: pointer;" />
</p>

<p class="float-left">
    <a asp-action="CrearSede" class="btn btn-primary">Agregar Sede</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre_sede)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre_ciudad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.direccion_fisica)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_sede)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_ciudad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.direccion_fisica)
            </td>
            <td>
            <td>
                @Html.ActionLink("Editar", "CrearSede", new { id = item.Id, nombre_sede = item.nombre_sede, id_ciudad = item.id_ciudad, direccion_fisica = item.direccion_fisica }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Eliminar", "EliminarSede", new { id = item.Id }, new { @class = "btn btn-danger", onclick = "return confirm('¿Está seguro/a de eliminar la Sede?')" })
            </td>
        </tr>
        }
    </tbody>
</table>
